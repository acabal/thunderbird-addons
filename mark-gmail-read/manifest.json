{
  "manifest_version": 2,
  "name": "Mark GMail Read",
  "description": "Automatically marks all messages in the [Gmail] folder and all subfolders as read.",
  "version": "4.0.0",
  "applications": {
    "gecko": {
      "id": "mark-gmail-read@peci1.cz",
      "strict_min_version": "102.0"
    }
  },
  "author": "Martin Pecka",
  "homepage_url": "https://github.com/peci1/thunderbird-addons",
  "permissions": [
    "accountsRead",
    "messagesRead",
    "notifications",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}
